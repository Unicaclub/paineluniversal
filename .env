# Database (Development - SQLite local)
DATABASE_URL=sqlite:///./paineluniversal.db
# DATABASE_URL=postgresql://painel_user:password@localhost:5432/paineluniversal
POSTGRES_PASSWORD=your_postgres_password

# Redis
REDIS_URL=redis://localhost:6379

# JWT
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password

# MEEP APIs
API_RECEITA_FEDERAL_URL=https://api.receitafederal.gov.br/v1
API_RECEITA_TOKEN=your_receita_token
CPF_SALT=your_cpf_salt_for_hashing

# WhatsApp
WHATSAPP_TOKEN=your_whatsapp_token
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Frontend
FRONTEND_URL=http://localhost:3000
VITE_API_URL=http://localhost:8000
VITE_MEEP_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:8000

# Security
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90

# Equipment Management
EQUIPMENT_DISCOVERY_ENABLED=true
EQUIPMENT_HEARTBEAT_INTERVAL=30

# PWA
PWA_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
OFFLINE_SYNC_ENABLED=true
